<%= form_for @project do |f| %>

	<%= f.error_messages header_message: "", header_tag: :span %>

	<%= f.label :name %>
	<%= f.text_field :name %>
	
	<%= f.label :blurb %>
	<%= f.text_field :blurb %>
	
	<%= f.label :language %>
	<%= f.text_field :language %>

	<%= f.label 'Links' %>
	<%= f.text_field :project_url, placeholder: 'Project' %>
	<%= f.text_field :code_url, placeholder: 'Code' %>	
	
	<%= f.label :finished_at %>
	<%= f.text_field :finished_at, class: "datepicker" %>
	
	<%= f.label :description %>
	<%= f.text_area :description, placeholder: 'Descriptions are supposed to use markdown...' %>

	<%= f.submit 'Save', class: 'btn' %>

<% end %>
