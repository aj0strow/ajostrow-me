<!DOCTYPE html>
<html lang='en'>

<%= render 'layouts/head' %>

<body>
	
	<%= render 'layouts/facebook' %>
	
	<%= render 'layouts/header' %>
	
	<div class="container">
		
		<div class="content">			
	
			<section class="page">
				<div class="page-inner">
					<%= yield %>
				</div>
			</section>
			
		</div>
		
	</div>
	
	<%= render 'layouts/footer' %>
	
	<% if Rails.env.development? %>
		<div class="container">		
			<%= debug(params) %>
		</div>
	<% end %>
	

</body>
</html>
